<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WanderLust</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,400;0,500;0,600;1,300&display=swap"
        rel="stylesheet">
    <link rel="apple-touch-icon" sizes="180x180" href="../icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="../icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="../icons/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="stylesheet" href="/css/rating.css">
    <link href='https://api.tiles.mapbox.com/mapbox-gl-js/v0.45.0/mapbox-gl.css' rel='stylesheet' />
    <script src='https://api.tiles.mapbox.com/mapbox-gl-js/v0.45.0/mapbox-gl.js'></script>

    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
        }

        .filter {
            text-align: center;
            margin-right: 2rem;
            margin-top: 1rem;
            opacity: 0.7;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
        }

        .tax-info {
            display: inline;
        }

        .tax-toggle {
            border: 0.1px #00000099 solid;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 3px 3px 9px rgba(0, 0, 0, 0.3);
            padding: 20px;
            display: flex;
            height: 2.5rem;
            align-items: center;
            margin-left: 1rem;
            margin-top: 0.4rem;
        }

        .btn-search:hover {
            background-color: #fe424d;
            color: #ffff;
        }

        .btn-search {
            background-color: #fe424d;
            color: #ffff;
            border-radius: 25px;
            padding: 0 1rem 0 1rem;
        }

        .btn-search i {
            display: inline;
            margin-right: 0.5rem;
        }

        .search-input {
            border-radius: 20px;
            padding: 0.5rem 3rem 0.5rem 3rem;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/listings"><i class="fa-solid fa-infinity fa-2xl" style="color: #fe424d;"></i></a> 
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link logo" href="/listings">WanderLust</a>
                </div>
                <div class="navbar-nav ms-auto">
                    <a href="/signup"> <button class="btn btn-search" type="submit">
                        <i class="fa-solid fa-user"></i>Signup</button></a>
                </div>
            </div>
        </div>
    </nav>

    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic City</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div><i class="fa-regular fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tents"></i></div>
            <p>Camping</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-wheat-awn"></i></div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pool</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beach</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-sailboat"></i></div>
            <p>Island</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-plane-departure"></i></div>
            <p>Foreign Trip</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-plane-departure"></i></div>
            <p><a href="/listings/new">Add new</a></p>
        </div>
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
            </div>
        </div>
    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3 ">
        <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card">
                <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text" data-price="<%= listing.price %>">
                        <b><%= listing.title %> </b><br>
                        &#8377; <span class="listing-price"><%= listing.price.toLocaleString("en-IN") %></span> / night
                        <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
                    </p>
                </div>
            </div>
        </a>
        <% } %>
    </div>

    <footer>
        <div class="f-info">
            <div class="f-info-socials">
                <a href="https://www.instagram.com/adesh_bhardwaj1/" style="color: inherit;"><i
                        class="fa-brands fa-square-instagram"></i></a>
                <a href="https://www.linkedin.com/in/adesh-kumar-dubey-427073227/" style="color: inherit;"><i
                        class="fa-brands fa-linkedin"></i></a>
                <a href="https://github.com/adesh9199/adesh9199" style="color: inherit;"><i
                        class="fa-brands fa-github"></i></a>
            </div>
            <p>&copy; 2024 WanderLust. All Rights Reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-euROytX1uSoCR2lLn2kGHd4e/4JXyYhwTcwh2Zr5Xx5SBGg9J1R3vjAfTeUpP"
        crossorigin="anonymous"></script>
    <script>
        let taxSwitch = document.getElementById("flexSwitchCheckDefault");

        function updatePrices() {
            let taxInfo = document.getElementsByClassName("tax-info");
            let displayTax = taxSwitch.checked;

            for (let info of taxInfo) {
                info.style.display = displayTax ? "none" : "inline";
            }

            let prices = document.getElementsByClassName("listing-price");
            for (let priceElement of prices) {
                let originalPrice = parseFloat(priceElement.parentElement.getAttribute("data-price"));
                let displayedPrice = displayTax ? (originalPrice * 1.18).toLocaleString("en-IN") : originalPrice.toLocaleString("en-IN");
                priceElement.textContent = displayedPrice;
            }
        }

        // Initial update
        updatePrices();

        taxSwitch.addEventListener("change", updatePrices);
    </script>
</body>

</html>
